@{
    ViewBag.Title = "Das Calculator";
    ViewBag.Name = "Joseph Steed's IS 413 Grade Calculator";
}

@model JosephSteed1.Models.GradePercentsModel
<body>
    <!--Grade calculator-->
    <h2>Grade calculator:</h2>
    <form method="post">
        <label>Assignments</label>
        <input asp-for="assignments" id="Assignments" type="number" step=".01" />
        <br />
        <label>Group Projects</label>
        <input asp-for="groupprojects" id="GroupProjects" type="number" step=".01" />
        <br />
        <label>Quizzes</label>
        <input asp-for="quizzes" id="Quizzes" type="number" step=".01" />
        <br />
        <label>Exams</label>
        <input asp-for="exams" id="Exams" type="number" step=".01" />
        <br />
        <label>Intex</label>
        <input asp-for="intex" id="Intex" type="number" step=".01" />
        <br />
        <input type="submit" value="calculate grade percent" id="submitgradepercent" />
        <div asp-validation-summary="All" id="asp-validation-summary"></div>
    </form>
</body>